<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable()): ?>
	<?php $stockItem = Mage::getModel('cataloginventory/stock_item')->loadByProduct($_product->getId()); $qtyIncrements = $stockItem->getQtyIncrements(); ?>
	<?php $qty = intval($qtyIncrements) > 0 ? $qtyIncrements : $this->getProductDefaultQty(); ?>
	<?php $minQty = $stockItem->getMinSaleQty(); ?>
    <?php if(intval($minQty) > 1) : ?>
    <div class="min-qty">Minimal quantity: <span><?php print $minQty;?></span></div>
	<?php endif; ?>
    <div class="add-to-cart">
    	<div class="qtyHolder">
	        <?php if(!$_product->isGrouped()): ?>
	        <label for="qty"><?php echo $this->__('Quantity:') ?></label>
	        <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $qty ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
	        <p><?php echo $this->__('Quantity Available: Distribution Center') ?></p>
	        <?php endif; ?>
	    </div>
        <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><?php echo $buttonTitle ?></span></button>
    </div>
        <?php echo $this->getChildHtml('', true, true) ?>
    
<?php endif; ?>
